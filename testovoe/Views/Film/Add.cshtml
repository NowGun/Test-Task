@model Film

@{
    ViewData["Title"] = "Новый фильм";
}

<div>

    <div>
        <h1 class="display-6">Добавление фильма</h1>
        <hr />
    </div>

    <form asp-action="Add" asp-controller="Film" method="post" enctype="multipart/form-data">

        <div class="d-flex flex-row bd-highlight">

            <div class="p-2 bd-highlight" style="width: 315px;">

                <div>
                    <label asp-for="File" class="form-label"></label>
                    <input type="file" class="form-control" asp-for="File" accept=".jpg, .jpeg, .png" onchange="preview()" />
                </div>

                <div>
                    <img class="text-center rounded my-3" style="width: 100%; object-fit: cover;" id="frame" />
                </div>

            </div>

            <div class="mx-3 p-2 bd-highlight">

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" cols="50" rows="6"> </textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="YearRelease" class="form-label"></label>
                    <input type="date" asp-for="YearRelease" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="Producer" class="form-label"></label>
                    <input type="text" asp-for="Producer" class="form-control" />
                </div>

                <input type="submit" value="Сохранить" class="btn btn-primary" />

            </div>

            <div class="p-2 bd-highlight">
                <div asp-validation-summary="All"></div>
            </div>

        </div>

    </form>
</div>
