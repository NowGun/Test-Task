@{
    ViewData["Title"] = "Регистрация";
}

@model testovoe.Models.RegisterViewModel

<div class="text-left">
    <div>
        <h1 class="display-6 p-2 bd-highlight">Регистрация</h1>
    </div>
    <hr />
    <div class="card">
        <div class="card-body">
            <form asp-controller="Account" asp-action="Register" method="post">
                <h5 class="card-title">Для регистрации заполните все поля</h5>

                <div class="mb-3">
                    <label>Имя</label>
                    <input asp-for="Name" class="form-control" type="text" placeholder="Иван"/>
                </div>

                <div class="mb-3">
                    <label>Фамилия</label>
                    <input class="form-control" type="text" asp-for="Surname" placeholder="Иванов"/>
                </div>

                <div class="mb-3">
                    <label>Почта</label>
                    <input class="form-control" type="email" asp-for="Email" placeholder="Введите адрес электронной почты" />
                </div>

                <div class="mb-3">
                    <label>Пароль</label>
                    <input class="form-control" type="password" asp-for="Password" placeholder="*********"/>
                </div>

                <div class="mb-3">
                    <label>Подтвердите пароль</label>
                    <input class="form-control" type="password" asp-for="ConfirmPassword" placeholder="*********"/>
                </div>
                <div class="d-flex align-items-center">
                    <input type="submit" value="Зарегистрироваться" class="btn btn-primary p-2 bd-highlight" style="width:180px;"/>
                    <div class="p-2 bd-highlight" asp-validation-summary="All"></div>
                </div>
            </form>
        </div>
    </div>
</div>
