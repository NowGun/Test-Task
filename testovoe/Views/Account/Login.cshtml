@model testovoe.Models.LoginViewModel

@{
    ViewData["Title"] = "Авторизация";
}

<div>
    <div>
        <h1 class="display-6 p-2 bd-highlight">Авторизация</h1>
    </div>
    <hr />
    <div class="d-flex justify-content-around bd-highlight align-items-center">
        <div class="bd-highlight">
            <form asp-action="Login" asp-controller="Account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" type="text" value="" />
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" type="password" />
                </div>

                <div class="px-3 d-flex align-items-center justify-content-center">
                    <div class="p-2 bd-highlight form-check">
                        <input type="checkbox" class="form-check-input" id="Checkbox" />
                        <label class="form-check-label" for="CheckBox">Запомнить меня</label>
                    </div>

                    <div class="px-2 bd-highlight">
                        <input type="submit" class="btn btn-primary" value="Войти" style="width: 150px;"/>
                    </div>
                </div>

            </form>
        </div>
        
        <div class="p-2 bd-highlight">
            <h2>Еще не зарегистрированы?</h2>
            <p>Зарегистрируйтесь в системе чтобы можно было <br> добавлять новые фильмы</p>
            <a class="btn btn-secondary" asp-controller="Account" asp-action="Register">Зарегистрироваться</a>
        </div>
    </div>
</div>



