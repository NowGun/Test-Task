@model Film

@{
    ViewData["Title"] = $"{Model.Name} (Редактирование)";
}

<div>
    <div class=d-flex flex-row bd-highlight">

        <div class="bd-highlight">

            <form method="post" asp-controller="Film" asp-action="Edit" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input type="text" class="form-control" value="@Model.Name" asp-for="Name" />
                </div>

                <div class=d-flex flex-row bd-highlight mb-3 mt-4">

                    <div class="bd-highlight" style=" width: 333px;">

                        <img class="image-info" src="~/images/posters/@Model.PosterName" id="frame" />

                        <div class="input-group mt-2">
                            <input type="file" class="form-control" asp-for="File" accept=".jpg, .jpeg, .png" onchange="preview()" asp-for="File">
                        </div>

                    </div>

                    <div class="ms-3 bd-highlight">

                        <div class="input-group mb-3">
                            <span class="input-group-text">Год-выпуска</span>
                            <input type="date" value="@Model.YearRelease" class="form-control" asp-for="YearRelease" />
                        </div>

                        <div class="input-group mb-3">
                            <span class="input-group-text">Режиссёр</span>
                            <input type="text" value="@Model.Producer" class="form-control" asp-for="Producer" />
                        </div>

                        <div class="input-group">
                            <span class="input-group-text">Описание</span>
                            <textarea asp-for="Description" cols="60" rows="8" class="form-control">@Model.Description</textarea>
                        </div>

                        <div asp-validation-summary="All" class=" mt-3"></div>

                        <input type="submit" value="Сохранить" class="btn btn-primary mt-3" />

                    </div>

                </div>
            </form>
        </div>
    </div>
</div>